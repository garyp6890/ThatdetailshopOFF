{% liquid
    # Props:
    # collection: Collection object
    # img_src: 'collection_image' | 'thumbnail' - default: 'thumbnail'

    assign NS = 'collection-card-min'
    assign cn = '#' | append: NS
    assign img_src = img_src | default: 'thumbnail'

    if img_src == 'thumbnail'
        assign first_product = collection.products | first
        assign thumbnail = collection.metafields.theme.thumbnail
        if thumbnail.type == 'file_reference' and thumbnail.value != blank
            assign image = thumbnail.value
        else
            assign image = first_product.featured_image
        endif
    elsif img_src == 'collection_image' 
        assign image = collection.image
    endif
%}


<div class="{{ cn }}">
    <a href="{{ collection.url }}" class="stretched-link" aria-label="{{ collection.title }}"></a>
    {% if image %}
        <div class="{{ cn }}-media">
            {% render 'media',
                image: image,
                image_res: 70,
                size: 'square'
            %}
        </div>   
    {% endif %}
    <div class="{{ cn }}-caption">
        <h4 class="{{ cn }}-title">{{ collection.title }}</h4>
    </div>
    <div class="{{ cn }}-arrow">
        {% render 'icon', name: 'angle-right' %}
    </div>
</div>